[Unit]
Description=FlyGate ACI - Aviation Control Interface
Documentation=https://github.com/your-repo/flygate-aci
After=network.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/opt/flygate-aci
ExecStart=/usr/bin/node /opt/flygate-aci/dist/index.cjs
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

Environment=NODE_ENV=production
Environment=PORT=5000

[Install]
WantedBy=multi-user.target
